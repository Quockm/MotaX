<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context=".Common.LoginSignUp.ForgotPasswordSuccessActivity">

    <ImageView
        android:id="@+id/btnLogin_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_arrow_back_24"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/bangers_regular"
            android:text="@string/password_updated"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="40sp"
            tools:ignore="AllCaps" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_iconfinder_meanicons_23_197211"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/slider_txtDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_password_has_been_updated"
            android:textSize="20sp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/coves_bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="Login"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"/>




    </LinearLayout>

</LinearLayout>